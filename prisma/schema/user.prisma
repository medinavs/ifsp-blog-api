model User {
    id            String    @id @default(uuid())
    name          String
    email         String
    emailVerified Boolean   @default(false)
    image         String?
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @default(now()) @updatedAt
    role          String?
    banned        Boolean?  @default(false)
    banReason     String?
    banExpires    DateTime?
    sessions      Session[]
    accounts      Account[]

    @@unique([email])
    @@map("users")
}
